<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="310"
             x:Class="Clockmaker0.Controls.EditCharacterControls.Root.ImagePicker">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" x:Name="LoadedImage" Width="200" Height="200"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="◀" FontSize="20" x:Name="BackButton" Click="BackButton_OnClick"
                    HorizontalContentAlignment="Center" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" VerticalContentAlignment="Center"/>
            <Button Grid.Column="1" Content="Replace" FontSize="20" x:Name="ReplaceButton" Click="ReplaceButton_OnClick"
                    HorizontalContentAlignment="Center" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" VerticalContentAlignment="Center"/>
            <Button Grid.Column="2" Content="▶" FontSize="20" x:Name="NextButton" Click="NextButton_OnClick"
                    HorizontalContentAlignment="Center" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" VerticalContentAlignment="Center"/>
        </Grid>
        <Button Grid.Row="4" Content="Delete Character" FontSize="20" HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center" VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                Click="DeleteButton_OnClick" x:Name="DeleteButton"/>
    </Grid>
</UserControl>
